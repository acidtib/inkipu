<section class="jumbotron text-center home-banner">
  <div class="container">
    <h3 class="text-muted">Welcome To The</h3>
    <h1 class="jumbotron-heading">ultimate match tracker</h1>
    <h2 class="text-muted">for HearthStone</h2>
    <p>
      <%= link_to 'Sign Up Free', signup_path, class: 'btn btn-primary' %>
    </p>
  </div>
</section>

<section class="bnet-search">
	<div class="container">
		<div class="row d-flex align-items-center">
			<div class="col-lg-5 heading-white mb-4 mb-sm-4 mb-lg-0 ftco-animate">
				<h2>Search Your BattleNet Name</h2>
				<p></p>
			</div>
			<div class="col-lg-7 p-5 ftco-wrap ftco-animate">
				<form action="#" class="domain-form d-flex mb-3">
          <div class="form-group domain-name">
            <input type="text" class="form-control name px-4" placeholder="BattleNet name...">
          </div>
          <div class="form-group domain-select d-flex">
            <input type="submit" class="search-domain btn btn-primary text-center" value="Search">
          </div>
        </form>
			</div>
		</div>
	</div>
</section>

<section class="ftco-section site-stats img" id="section-counter">
	<div class="container">
		<div class="row justify-content-center mb-5">
      <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
        <span class="subheading">Stats being tracked</span>
      </div>
    </div>
		<div class="row justify-content-center">
			<div class="col-md-10">
    		<div class="row">
          <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
            <div class="block-18 text-center">
              <div class="text">
                <strong class="number"><%= @userCount %></strong>
                <span>BattleNet Users</span>
              </div>
            </div>
          </div>
          <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
            <div class="block-18 text-center">
              <div class="text">
                <strong class="number"><%= @matchesCount %></strong>
                <span>Matches</span>
              </div>
            </div>
          </div>
          <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
            <div class="block-18 text-center">
              <div class="text">
                <strong class="number"><%= @playersCount %></strong>
                <span>Players</span>
              </div>
            </div>
          </div>
          <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
            <div class="block-18 text-center">
              <div class="text">
                <strong class="number">0</strong>
                <span>Happy China</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
	</div>
</section>