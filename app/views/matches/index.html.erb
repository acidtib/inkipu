<div class="container main-main">
  <div class="row">
    <div class="col-12">
      <h2>Matches</h2>

      <table class="table">
        <thead>
          <tr>
            <th>Game</th>
            <th>Challenger</th>
            <th>Opponent</th>
            <th>Completed At</th>
          </tr>
        </thead>

        <tbody>
          <% @matches.each do |match| %>
            <tr>
              <td><%= match.game %></td>
              <td><%= link_to match.player.bnet_name, get_player_path(match.player.name) %></td>
              <td><%= link_to match.opponent.bnet_name, get_player_path(match.opponent.name) %></td>
              <td><%= match.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>