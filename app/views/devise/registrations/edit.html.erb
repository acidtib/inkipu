<div class="container main-main">
  <div class="row">
    <div class="col-sm-12 col-lg-12">
      <h2>Account Details</h2>
      
      <div class="field">
        <label for="user_email">Account Name</label><br>
        <input type="text" value="<%= current_user.player.name %>" disabled>
      </div>

      <div class="field">
        <label for="user_email">BattleNet#</label><br>
        <input type="text" value="<%= current_user.player.bnet_name %>" disabled>
      </div>

      <br>
      <br>

      <h3>Cancel my account</h3>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>
  </div>
</div>